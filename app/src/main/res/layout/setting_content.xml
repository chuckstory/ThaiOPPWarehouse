<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8EAF6"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SettingActivity"
    tools:showIn="@layout/setting_layout">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize="14dp"
            android:textStyle="bold"
            android:text="URL" />

        <EditText
            android:id="@+id/editTextUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize="12dp"
            android:hint="e.g. http://192.168.1.1/webservice.aspx"/>

        <TextView
            android:id="@+id/textViewSoapAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize="14dp"
            android:textStyle="bold"
            android:text="SOAP ACTION" />

        <EditText
            android:id="@+id/editTextSoapAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize="12dp"
            android:hint="e.g. http://tempuri.org/ExecuteStore"/>

        <TextView
            android:id="@+id/textViewOperationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize="14dp"
            android:textStyle="bold"
            android:text="OPERATION NAME" />

        <EditText
            android:id="@+id/editTextOperationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize="12dp"
            android:hint="e.g. ExecuteStore"/>

        <TextView
            android:id="@+id/textViewNamespace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize="14dp"
            android:textStyle="bold"
            android:text="NAMESPACE" />

        <EditText
            android:id="@+id/editTextNamespace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize="12dp"
            android:hint="e.g. http://tempuri.org/"/>

        <TextView
            android:id="@+id/textViewTimeout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize="14dp"
            android:textStyle="bold"
            android:text="TIMEOUT" />

        <EditText
            android:id="@+id/editTextTimeout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize="12dp"
            android:hint="e.g. 60000"/>
        <TextView
            android:id="@+id/textViewPin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize="14dp"
            android:textStyle="bold"
            android:text="PIN" />

        <EditText
            android:id="@+id/editTextPin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize="12dp"
            android:hint="e.g. 9999"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RECORD LOG"
            android:id="@+id/switchRecLog"
            android:checked="false"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</RelativeLayout>